<Window x:Class="PL.ChangePassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="Change Password" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Content="{Binding}" Style="{StaticResource LabelTitleStyle}" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
        <PasswordBox x:Name="OldPassword" Width="100" MaxLength="6" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <PasswordBox x:Name="NewPassword" Width="100" MaxLength="6" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Top"/>
    </Grid>
</Window>
