<Window x:Class="PL.Users.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Users"
        mc:Ignorable="d"
          Title="Main" Height="300" Width="500" WindowStartupLocation="CenterScreen">
    <Grid>
        <Button x:Name="SignInAsManager" Style="{StaticResource ButtonStyle}" Content="Manager" Width="100" Height="40" VerticalAlignment="Center" HorizontalAlignment="Center" Click="SignInAsManager_Click" FontSize="16"/>
        <Label x:Name="Time" Style="{StaticResource LabelTitleStyle}" Content="{Binding Path=Now, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" HorizontalContentAlignment="Right" FontSize="12"/>
        <Grid.Background>
            <ImageBrush ImageSource="pictureBus.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
    </Grid>
    
</Window>
