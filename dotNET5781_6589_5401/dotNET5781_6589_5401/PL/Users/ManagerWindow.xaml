<Window x:Class="PL.ManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
          Title="ManagerWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label x:Name="Username" Content="{Binding Username}" Style="{StaticResource LabelTitleStyle}" VerticalAlignment="Center" HorizontalAlignment="Right" Width="100"/>
        <Button x:Name="ShowBuses" Content="Buses" Style="{StaticResource ButtonStyle}" Grid.Row="1" Height="30" Width="100" VerticalAlignment="Center" Click="ShowBuses_Click"/>
        <Button x:Name="ShowLines" Content="Lines" Style="{StaticResource ButtonStyle}" Grid.Row="2" Height="30" Width="100" VerticalAlignment="Center" Click="ShowLines_Click"/>
        <Button x:Name="ShowStations" Content="Stations" Style="{StaticResource ButtonStyle}" Grid.Row="3" Height="30" Width="100" VerticalAlignment="Center" Click="ShowStations_Click"/>
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label x:Name="SignOut" Content="Sign out" Style="{StaticResource LabelToClickStyle}" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" PreviewMouseDown="SignOut_PreviewMouseDown"/>
            <Label x:Name="ChangePassword" Content="Change password" Style="{StaticResource LabelToClickStyle}" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" PreviewMouseDown="ChangePassword_PreviewMouseDown"/>
            <Label x:Name="ChangeCode" Content="Change managing code" Style="{StaticResource LabelToClickStyle}" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" PreviewMouseDown="ChangeCode_PreviewMouseDown"/>
        </Grid>
    </Grid>
</Window>
