<Window x:Class="temp.ManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:temp"
        mc:Ignorable="d"
        Title="ManagerWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label x:Name="Username" Content="{Binding Username}" VerticalAlignment="Center" HorizontalAlignment="Right" Width="100"/>
        <Button x:Name="ShowBuses" Content="Buses" Grid.Row="1" Width="70" VerticalAlignment="Center"/>
        <Button x:Name="ShowLines" Content="Lines" Grid.Row="2" Width="70" VerticalAlignment="Center"/>
        <Button x:Name="ShowStations" Content="Stations" Grid.Row="3" Width="70" VerticalAlignment="Center"/>
    </Grid>
</Window>
