<Application x:Class="dotNET5781_03B_6589_5401.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:dotNET5781_03B_6589_5401"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <DataTemplate x:Key="busInlistBoxTemplate">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding}" Height="20" Width="90" HorizontalAlignment="Left"/>
                <Button x:Name="DriveButton" Content="Drive" Height="20" Width="60" HorizontalAlignment="Center" IsEnabled="{Binding Path=Status, ConverterCulture={DynamicResource StateToBool}}" Click="DriveButton_Click"/>
                <Button x:Name="FuelButton" Content="Fuel" Height="20" Width="60" HorizontalAlignment="Right" Click="FuelButton_Click" />
            </StackPanel>
        </DataTemplate>
    </Application.Resources>
</Application>
