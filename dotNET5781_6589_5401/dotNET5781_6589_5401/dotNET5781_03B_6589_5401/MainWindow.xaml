<Window x:Class="dotNET5781_03B_6589_5401.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dotNET5781_03B_6589_5401"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <local:StateToBool_Drive x:Key="StateToBool_Drive"/>
        <local:FloatToBool_Fuel x:Key="FloatToBool_Fuel"/>
        <DataTemplate x:Key="busInlistBoxTemplate">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding}" Height="20" Width="90" HorizontalAlignment="Left"/>
                <Button x:Name="DriveButton" Content="Drive" Height="20" Width="60" HorizontalAlignment="Center" IsEnabled="{Binding Path=Status, Converter={StaticResource StateToBool_Drive}}" Click="DriveButton_Click"/>
                <Button x:Name="FuelButton" Content="Fuel" Height="20" Width="60" HorizontalAlignment="Right" IsEnabled="{Binding Path=KmSinceFueled, Converter={StaticResource FloatToBool_Fuel}}" Click="FuelButton_Click"/>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <ListBox x:Name="BusesList" ItemsSource="{Binding}" ItemTemplate="{StaticResource busInlistBoxTemplate}" HorizontalAlignment="Left" Height="257" Margin="120,55,0,0" VerticalAlignment="Top" Width="251"/>
        <Button x:Name="AddBusButton" Content="Add bus" HorizontalAlignment="Left" Margin="120,342,0,0" VerticalAlignment="Top" Width="100" Click="AddBusButton_Click"/>
    </Grid>
</Window>
