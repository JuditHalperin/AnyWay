<Window x:Class="dotNET5781_03B_6589_5401.AddBus"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dotNET5781_03B_6589_5401"
        mc:Ignorable="d"
        Title="AddBus" Height="250" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid x:Name="LeftGrid" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label Content="ID number:" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBox x:Name="ID" Grid.Row="1" Width="100" Height="25" VerticalAlignment="Top"/>
            <Label Content="* 7 digits for buses before 2018, 8 digits for buses after 2018" Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Center" FontSize="6"/>
            <Label Content="Total km of drive:" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <TextBox x:Name="TotalKm" Grid.Row="3" Width="100" Height="25" VerticalAlignment="Top"/>
            <Button x:Name="OkButton" Content="OK" Grid.Row="4" Height="20" Width="60" Margin="25,10,111,14" Click="OkButton_Click"/>
            <Button x:Name="CancelButton" Content="Cancel" Grid.Row="4" Height="20" Width="60" Margin="111,10,25,14" Click="CancelButton_Click"/>
        </Grid>
        <Label Content="Activitity begining date:" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Calendar x:Name="BeginingDate" Grid.Column="1" HorizontalAlignment="Center" SelectionMode="SingleDate" DisplayDateStart="01.01.1990" Margin="9.2,35,9.6,12"/>
    </Grid>
</Window>
